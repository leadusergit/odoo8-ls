<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_clinic_medical_record_filter" model="ir.ui.view">
            <field name="name">clinic.medical.record.select</field>
            <field name="model">clinic.medical_record</field>
            <field name="arch" type="xml">
                <search string="medical.record">
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_clinic_medical_record_form" model="ir.ui.view">
            <field name="name">clinic.medical.record.form</field>
            <field name="model">clinic.medical_record</field>
            <field name="arch" type="xml">
                <form string="medical.record">
                    <header>
                    </header>
                    <sheet string="medical.record">
                     <group>
                        <field name="date"/>
                        <field name="user_id"/>
                        <field name="body" default_focus="1"/>
                     </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_clinic_medical_record_tree" model="ir.ui.view">
            <field name="name">clinic.medical.record.tree</field>
            <field name="model">clinic.medical_record</field>
            <field name="arch" type="xml">
                <tree string="medical.record">
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="body"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
