<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<record id="view_wizard_report_balance_general_form" model="ir.ui.view">
			<field name="name">wizard.report.balance.general.form</field>
			<field name="model">wizard.report.balance.general</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Reporte del Balance General">
					<group col="4" states="ini" colspan="4">
						<separator string="Filtros" colspan="4"/>
						<field name="fiscalyear_id" on_change="onchange_fiscalyear_id(fiscalyear_id)"/>
						<field name="code"/>
						<separator colspan="4" string="Selecionar el o los periodos"/>
						<field name="periods" colspan="4"/>
					</group>
					<group col="2" states="res" colspan="4">
						<field name="data"/>
						<field name="name"/>
					</group>
					<separator colspan="4"/>
					<footer>
						<field name="state" readonly="1" nolabel="1" invisible="1"/>
						<button name="generate_report" string="Generar" type="object" states="ini" class="oe_highlight"/>
						รณ
						<button special="cancel" string="Salir" class="oe_link"/>
					</footer>
				</form>
			</field>
		</record>


		<!-- Actions -->
		<record id="action_wizard_report_balance_general" model="ir.actions.act_window">
			<field name="name">Reporte Balance General</field>
			<field name="type">ir.actions.act_window</field>
				<field name="res_model">wizard.report.balance.general</field>
				<field name="view_type">form</field>
				<field name="view_mode">form</field>
				<field name="view_id" ref="view_wizard_report_balance_general_form"/>
				<field name="target">new</field>
		</record>
		
